@using ComputerNetwork.Models
@model Computer

@{
    Layout = "_BasicLayout";
    ViewBag.Title = "Computer Network";
}

<div class="container">
    <div class="form-row">
        <div class="col-md-3 justify-content-center btn-group-vertical" role="group">
            <button type="button" id="routerbuttonid" class="btn btn-secondary" asp-action="AddRouter" onclick="addRouter()">Router</button>
            <button type="button" id="switchbuttonid" class="btn btn-secondary" onclick="addSwitch()">Switch</button>
            <button type="button" id="computerbuttonid" class="btn btn-secondary" onclick="addComputer()">Computer</button>
            <button type="button" id="connectbuttonid" class="btn btn-secondary" onclick="addConnection()">Connect</button>
            <button type="button" id="deletebuttonid" class="btn btn-secondary" onclick="deleteItem()">Delete Item</button>
            <button type="button" id="deletebuttonid" class="btn btn-secondary" onclick="deleteEdge()">Delete Edge</button>
            <button type="button" id="cleancanvasbuttonid" class="btn btn-secondary" onclick="resetAllNodes()">Clean</button>
        </div>
        <div id="mynetwork" class="col-md-7"></div>
        <div class="col-md-2">
            <iframe name="votar" style="display: none;"></iframe>

            <form asp-controller="Home" asp-action="Index" id="objectparameters" method="post" target="votar">
                <div class="form-group">
                    <label asp-for="NameofElement">Name: </label>
                    <input asp-for="NameofElement" id="nameofelementform" class="form-control" name="nameofelement" autocomplete="off" type="text" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="IdOfElement">ID: </label>
                    <input asp-for="IdOfElement" id="idform" class="form-control" name="idofelement" autocomplete="off" type="text" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="IpAddress">IP-Address:</label>
                    <input asp-for="IpAddress" name="ipaddress" class="form-control" id="ipaddressform" autocomplete="off" type="text" />
                </div>
                <div class="form-group">
                    <label asp-for="Mask">Mask:</label>
                    <input asp-for="Mask" type="text" name="mask" class="form-control" id="maskform" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="Gateway">Default Gateway:</label>
                    <input asp-for="Gateway" class="form-control" id="defaultgatewayform" name="gateway" autocomplete="off" type="text" />
                </div>
                <button type="submit" name="submit" onclick="submitform()" class="btn btn-primary">Add Parameters</button>
            </form>

